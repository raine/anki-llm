{
  "name": "anki-llm-batch",
  "version": "1.1.0",
  "type": "module",
  "description": "A command-line interface for bulk-processing Anki flashcards with LLMs",
  "bin": {
    "anki-llm-batch": "dist/cli.js"
  },
  "files": [
    "dist/**",
    "README.md",
    "LICENSE",
    "ANKI_CONNECT.md"
  ],
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "prepare": "pnpm run build",
    "prepublishOnly": "pnpm run check",
    "test": "echo \"Error: no test specified\" && exit 1",
    "format": "prettier --write .",
    "check": "concurrently \"pnpm:check:*\"",
    "check:types": "tsgo --noEmit",
    "check:format": "prettier --write .",
    "check:lint": "eslint .",
    "publish:patch": "npm version patch && npm publish",
    "publish:minor": "npm version minor && npm publish",
    "publish:major": "npm version major && npm publish"
  },
  "keywords": [
    "anki",
    "llm",
    "cli",
    "openai",
    "flashcards",
    "batch-processing",
    "ai"
  ],
  "author": "Raine Virta <raine.virta@gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/raine/anki-llm-batch#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/raine/anki-llm-batch.git"
  },
  "bugs": {
    "url": "https://github.com/raine/anki-llm-batch/issues"
  },
  "engines": {
    "node": ">=18"
  },
  "publishConfig": {
    "access": "public"
  },
  "packageManager": "pnpm@10.16.1",
  "devDependencies": {
    "@eslint/js": "^9.38.0",
    "@types/cli-progress": "^3.11.6",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^24.9.1",
    "@types/papaparse": "^5.3.16",
    "@types/yargs": "^17.0.33",
    "@typescript/native-preview": "7.0.0-dev.20251022.1",
    "concurrently": "^9.2.1",
    "eslint": "^9.38.0",
    "prettier": "^3.6.2",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.2"
  },
  "dependencies": {
    "chalk": "^5.6.2",
    "cli-progress": "^3.12.0",
    "js-yaml": "^4.1.0",
    "openai": "^6.6.0",
    "p-limit": "^7.2.0",
    "p-retry": "^7.1.0",
    "papaparse": "^5.5.3",
    "yargs": "^18.0.0",
    "zod": "^4.1.12"
  }
}
